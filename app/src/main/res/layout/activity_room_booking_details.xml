<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F8F5F2">

    <TextView
        android:id="@+id/labelRoomType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewRoomType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Room Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toBottomOf="@id/labelRoomType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewRoomDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Room Description"
        android:textSize="16sp"
        android:textColor="#7D7D7D"
        app:layout_constraintTop_toBottomOf="@id/textViewRoomType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewRoomPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price: Rs. / Night"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        app:layout_constraintTop_toBottomOf="@id/textViewRoomDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewRoomAvailability"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Availability: Available"
        android:textSize="16sp"
        android:textColor="#3BA59A"
        app:layout_constraintTop_toBottomOf="@id/textViewRoomPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/labelDateSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Dates"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toBottomOf="@id/textViewRoomAvailability"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewCheckInDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check-in Date"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toBottomOf="@id/labelDateSelection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonPickCheckInDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:textSize="16sp"
        android:backgroundTint="#D4AF37"
        app:layout_constraintTop_toBottomOf="@id/textViewCheckInDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewCheckOutDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check-out Date"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toBottomOf="@id/buttonPickCheckInDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonPickCheckOutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:textSize="16sp"
        android:backgroundTint="#D4AF37"
        app:layout_constraintTop_toBottomOf="@id/textViewCheckOutDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonConfirmBooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2C3E50"
        app:layout_constraintTop_toBottomOf="@id/buttonPickCheckOutDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
