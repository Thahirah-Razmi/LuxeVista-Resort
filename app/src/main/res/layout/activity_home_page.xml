<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3E50"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to LuxeVista Resort"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D4AF37"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Profile"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonRoomBooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Browse and Book Rooms"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonManageBookings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Bookings"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRoomBooking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonServices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reserve In-House Services"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonManageBookings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonManageReservations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Reservations"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonServices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonLocalAttractions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Local Attractions"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonManageReservations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonOffers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exclusive Offers"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLocalAttractions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonOffers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
